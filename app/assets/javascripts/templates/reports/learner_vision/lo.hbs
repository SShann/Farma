<div class="modal" id="learner-vision-modal" tabindex="-1">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>

    <header class='center'>
      <h3 class="center">Visão do Aprendiz {{learner.name}}</h3>
      <h4>Objeto de Aprendizagem {{name}}</h4>
      <div class='navigator'></div>
      {{#UnlessNil completeness}}
      <div class="progress progress-success">
        <div class="bar" style="width: {{completeness}}%">
          {{completeness}}% Concluído
        </div>
      </div>
      {{/UnlessNil}}
    </header>

    <div class="modal-body">
      <section class='page' >
      </section>
    </div>

    <div class="modal-footer">
      <button type="button" data-dismiss="modal" class="btn">Close</button>
    </div>
  </div>
</div>

