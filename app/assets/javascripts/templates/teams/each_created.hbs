<header>
  <div class='clearfix'>
   <div class='left'>
      <h4>{{name}}</h4>
    </div>
    <span class="right">
      {{#if available}}
        <span class="btn btn-small btn-success disabled available-info">Turma Aberta</span>
      {{else}}
        <span class="btn btn-small btn-danger disabled available-info">Turma Fechada</span>
      {{/if}}
      <a href='#' id='team_details'><i class="icon-eye-open"></i> Detalhes </a>
      <a href='#' data-id='{{id}}' id='edit_team'><i class="icon-edit"></i> Editar </a>
      {{#ifCond numbers_of_enrolled 0}}
        <a href='#' data-id='{{id}}' id='destroy_team' ><i class="icon-remove-circle"></i> Remover </a>
      {{/ifCond}}
    </span>
  </div>
    <span class='date-info'>
      Criado em {{created_at}} |

      {{#ifCond numbers_of_enrolled 1}}
         {{numbers_of_enrolled}} aprendiz matriculado
      {{else}}
         {{numbers_of_enrolled}} aprendizes matriculados
      {{/ifCond}}
      |
      <a href="#" class='view-learners'><i class='icon-eye-close'></i> Ver Aprendizes</a>
    </span>
</header>

<section class='show-learners hide'>
  <table class="table table-condensed table-hover">
     <thead>
      <tr><td></td><th>Aprendiz</th></tr>
     </thead>
     <tbody>
      {{#each_with_index users}}
        <tr><td colspan="2">{{index}} - {{name}} <span class='date-info'> {{email}} </span> </td></tr>
      {{/each_with_index}}
     </tbody>
  </table>
</section>

<hr>
